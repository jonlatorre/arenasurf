# Archivo de configuración para Producción
# Copia este archivo como .env y ajusta los valores

# Django Configuration
SECRET_KEY=tu_secret_key_super_segura_aqui_generar_nueva
DEBUG=False
ALLOWED_HOSTS=tu-dominio.com,www.tu-dominio.com

# Database Configuration
MYSQL_DATABASE=arenasurf
MYSQL_USER=arenasurf
MYSQL_PASSWORD=tu_password_mysql_super_segura
MYSQL_ROOT_PASSWORD=tu_root_password_mysql_super_segura

# SSL Configuration
SECURE_SSL_REDIRECT=True
SECURE_PROXY_SSL_HEADER=HTTP_X_FORWARDED_PROTO,https
USE_X_FORWARDED_HOST=True
USE_X_FORWARDED_PORT=True

# Email Configuration (opcional)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=tu-email@gmail.com
EMAIL_HOST_PASSWORD=tu-app-password

# Registry Configuration (para CI/CD)
REGISTRY_IMAGE=registry.gitlab.com/tu-usuario/arenasurf:latest

# Logging
LOG_LEVEL=INFO

# Backup Configuration
BACKUP_RETENTION_DAYS=30

# Security Headers
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
X_FRAME_OPTIONS=DENY

# Session Security
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
CSRF_COOKIE_HTTPONLY=True

# Cache Configuration (opcional - Redis)
# CACHE_URL=redis://redis:6379/1

# Monitoring (opcional)
# SENTRY_DSN=https://tu-sentry-dsn@sentry.io/proyecto-id
